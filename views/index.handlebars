<div class="jumbotron">
  <div class="container">

    <div class="row">

      <div class="col-sm-3">
        <img id="burgerImg" src="./assets/img/burger.png" alt="loading burger...">
        <p class="daburger">Da-Burger</p>

      </div>

      <div class="col-sm-3"></div>

      <div class="col-sm-6">

        <h2>Add a burger</h2>

        <form class="create-update-form" action="/" method="POST">

          <div class="form-group">
            <label for="bur">Burger Name:</label>
            <input type="text" id="bur" name="name">
          </div>

          <button type="submit">Add Burger</button>
        </form>

      </div>
    </div>


  </div>
</div>

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-3">

    <h2>Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.burger_name}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>

  </div>
  <div class="col-sm-1"></div>

  <div class="col-sm-3">

    <h2>Devoured</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>

  </div>
  <div class="col-sm-3"></div>
</div>